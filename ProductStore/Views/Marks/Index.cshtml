@model IEnumerable<ProductStore.Models.Mark>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TotalMark)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TotalMark)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MarkId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MarkId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MarkId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
