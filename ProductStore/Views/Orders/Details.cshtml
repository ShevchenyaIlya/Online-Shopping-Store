@model ProductStore.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <div>
                    <h4 style="text-align: center">Order</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Addres)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Addres)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.City)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.City)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.State)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.State)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Country)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Country)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ZipCode)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ZipCode)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.AmountPaid)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.AmountPaid)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.PaymentType)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.PaymentType)
                        </dd>
                        <dt class="col-sm-4">
                            Customer
                        </dt>
                        <dd class="col-sm-8">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Customer.FirstName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Customer.FirstName)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Customer.LastName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Customer.LastName)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Customer.UserName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Customer.UserName)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Customer.Email)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Customer.Email)
                                </dd>
                                @if (Model.Customer.ProfilePicture != null)
                                {
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.Customer.ProfilePicture)
                                    </dt>
                                    <dd class="col-sm-8">
                                        <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Customer.ProfilePicture))">
                                    </dd>
                                }
                            </dl>
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FormedDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FormedDate)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.OrderId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
