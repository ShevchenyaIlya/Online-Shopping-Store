@model ProductStore.Models.Rating

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3 class="alert-danger">Are you sure you want to delete this?</h3>
<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <div>
                    <h4 style="text-align: center">Rating</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            Mark
                        </dt>
                        <dd class="col-sm-8">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.UserMarks.TotalMark)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.UserMarks.TotalMark)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.UserMarks.User.UserName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.UserMarks.User.UserName)
                                </dd>
                                @if (Model.UserMarks.User.ProfilePicture != null)
                                {
                                    <dt class="col-sm-4">
                                        @Html.DisplayNameFor(model => model.UserMarks.User.ProfilePicture)
                                    </dt>
                                    <dd class="col-sm-8">
                                        <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.UserMarks.User.ProfilePicture))">
                                    </dd>
                                }
                            </dl>
                        </dd>
                        <dt class="col-sm-4">
                            Product
                        </dt>
                        <dd class="col-sm-8">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Product.ProductName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Product.ProductName)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Product.ProductDescription)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Product.ProductDescription)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Product.ProductPicture)
                                </dt>
                                <dd class="col-sm-8">
                                    <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Product.ProductPicture))">
                                </dd>
                            </dl>
                        </dd>
                    </dl>

                    <form asp-action="Delete" style="background: transparent">
                        <input type="hidden" asp-for="RatingId" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>