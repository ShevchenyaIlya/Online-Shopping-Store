@model ProductStore.Models.Rating

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Rating</h4>
<hr />
<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div class="row">
                <form asp-action="Create" method="post" style=" width: 95%; margin-left: 20px; ">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Product, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.Product, new SelectList(ViewBag.Product, "Value", "Text"), new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserMarks, new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.UserMarks, new SelectList(ViewBag.Mark, "Value", "Text"), new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-secondary btn-lg btn-block" />
                    </div>
                </form>
            </div>

            <div>
                <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Back to List</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
