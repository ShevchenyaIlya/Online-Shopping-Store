@model ProductStore.Models.Category
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>@localizer["Delete"]</h1>

<h3 class="alert-danger">@localizer["Are you sure you want to delete this"]?</h3>
<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <h4 style="text-align: center">@localizer["Category"]</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CategoryName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CategoryDescription)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CategoryDescription)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.IsDeleted)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.IsDeleted)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ImageName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.ImageName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.AddedDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.AddedDate)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CategoryPicture)
                    </dt>
                    <dd class="col-sm-8">
                        <img id="profilePicture" style="width:200px;height:150px; object-fit:cover" src="@Model.CategoryPicture">
                    </dd>
                </dl>

                <form asp-action="Delete" style="background: transparent">
                    <input type="hidden" asp-for="CategoryId" />
                    <input type="submit" value="@localizer["Delete"]" class="btn btn-secondary btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Back to List"]</a>
                </form>
            </div>
        </div>
    </div>
</div>