@model ProductStore.Models.Category
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>@localizer["Details"]</h1>

@if (ViewBag.StatusMessage != null)
{
    <partial name="../Shared/_StatusMessage" model="ViewBag.StatusMessage" />
}
<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <div>
                    <h4 style="text-align: center">@localizer["Category"]</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CategoryDescription)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CategoryDescription)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.IsDeleted)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ImageName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ImageName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.AddedDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.AddedDate)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CategoryPicture)
                        </dt>
                        <dd class="col-sm-8">
                            <img id="profilePicture" style="width:200px;height:150px; object-fit:cover" src="@Model.CategoryPicture">
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Edit"]</a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Back to List"]</a>
                </div>
            </div>
        </div>
    </div>
</div>