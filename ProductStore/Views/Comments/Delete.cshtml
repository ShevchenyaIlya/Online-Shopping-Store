@model ProductStore.Models.Comment
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>@localizer["Delete"]</h1>

<h3 class="alert-danger">@localizer["Are you sure you want to delete this"]?</h3>
<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <h4 style="text-align: center">@localizer["Comment"]</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentTitle)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentTitle)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentBody)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentBody)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.PostDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PostDate)
                    </dd>
                    <dt class="col-sm-4">
                        Commented product
                    </dt>
                    <dd class="col-sm-8">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentProduct.ProductName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentProduct.ProductName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentProduct.ProductDescription)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentProduct.ProductDescription)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentProduct.ProductPicture)
                            </dt>
                            <dd class="col-sm-8">
                                <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="@Model.CommentProduct.ProductPicture">
                            </dd>
                        </dl>
                    </dd>
                    <dt class="col-sm-4">
                        Commented user
                    </dt>
                    <dd class="col-sm-8">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.FirstName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.FirstName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.LastName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.LastName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.UserName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.UserName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.Email)
                            </dd>
                            @if (Model.CommentUser.ProfilePicture != null)
                            {
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.CommentUser.ProfilePicture)
                                </dt>
                                <dd class="col-sm-8">
                                    <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="@Model.CommentUser.ProfilePicture">
                                </dd>
                            }
                        </dl>
                    </dd>
                </dl>

                <form asp-action="Delete" style="background: transparent">
                    <input type="hidden" asp-for="CommentId" />
                    <input type="submit" value="@localizer["Delete"]" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Back to List"]</a>
                </form>
            </div>
        </div>
    </div>
</div>