@model ProductStore.Models.Comment

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <h4 style="text-align: center">Comment</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentTitle)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentTitle)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CommentBody)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CommentBody)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.PostDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.PostDate)
                    </dd>
                    <dt class="col-sm-4">
                        Commented product
                    </dt>
                    <dd class="col-sm-8">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentProduct.ProductName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentProduct.ProductName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentProduct.ProductDescription)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentProduct.ProductDescription)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentProduct.ProductPicture)
                            </dt>
                            <dd class="col-sm-8">
                                <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.CommentProduct.ProductPicture))">
                            </dd>
                        </dl>
                    </dd>
                    <dt class="col-sm-4">
                        Commented user
                    </dt>
                    <dd class="col-sm-8">
                        <dl class="row">
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.FirstName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.FirstName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.LastName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.LastName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.UserName)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.UserName)
                            </dd>
                            <dt class="col-sm-4">
                                @Html.DisplayNameFor(model => model.CommentUser.Email)
                            </dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.CommentUser.Email)
                            </dd>
                            @if (Model.CommentUser.ProfilePicture != null)
                            {
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.CommentUser.ProfilePicture)
                                </dt>
                                <dd class="col-sm-8">
                                    <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.CommentUser.ProfilePicture))">
                                </dd>
                            }
                        </dl>
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CommentId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Edit</a>
                <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Back to List</a>
            </div>
        </div>
    </div>
</div>