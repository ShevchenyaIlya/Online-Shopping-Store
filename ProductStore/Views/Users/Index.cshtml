@model IEnumerable<ProductStore.Areas.Identity.Data.ApplicationUser>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@if (ViewBag.StatusMessage != null)
{
    <partial name="../Shared/_StatusMessage" model="ViewBag.StatusMessage" />
}
<p>
    <a asp-action="Create" class="btn btn-secondary btn-sm">@localizer["Create New"]</a>
</p>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                @*@if (item.ProfilePicture != null)
                    {
                    <td>
                        <img id="profilePicture" style="width:45px;height:30px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(item.ProfilePicture))">
                    </td>
                    }*@
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Edit</a>*@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Details"]</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
