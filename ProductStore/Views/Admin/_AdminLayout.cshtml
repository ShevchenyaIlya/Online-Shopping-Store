@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        <div id="layoutSidenav" style="height: 100%;">
            <div id="layoutSidenav_nav">
                <div id="sidenavAccordion" class="sb-sidenav accordion sb-sidenav-dark">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div>
                                <div class="sb-sidenav-menu-heading"><span>@localizer["Labeling"]</span></div>
                                <a class="nav-link active" href="/Admin/Index">
                                    <div class="sb-nav-link-icon"><i class="fa fa-dashboard"></i></div><span>@localizer["Dashboard"]</span>
                                </a>
                            </div>
                            <div>
                                <div class="sb-sidenav-menu-heading"><span>@localizer["System"]</span></div>
                                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                    <div class="sb-nav-link-icon"><i class="fa fa-dashboard"></i></div><span>@localizer["Tables"]</span>
                                    <div class="sb-sidenav-collapse-arrow"><i class="fa fa-angle-down"></i></div>
                                </a>
                                <div id="collapseLayouts" class="collapse" aria-labelledby="headingOne" data-parent="#sidenavAccordion">
                                    <div class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="/Admin/Users/Index">@localizer["Users"]</a>
                                        <a class="nav-link" href="/Admin/RoleManager/Index">@localizer["RolesManager"]</a>
                                        <a class="nav-link" href="/Admin/UserRoles/Index">@localizer["UserRoles"]</a>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="sb-sidenav-menu-heading"><span>@localizer["Basic"]</span></div>
                                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapse2">
                                    <div class="sb-nav-link-icon"><i class="fa fa-dashboard"></i></div><span>@localizer["Tables"]</span>
                                    <div class="sb-sidenav-collapse-arrow"><i class="fa fa-angle-down"></i></div>
                                </a>
                                <div id="collapse2" class="collapse" aria-labelledby="heading2" data-parent="#sidenavAccordion">
                                    <div id="sidenavAccordionPages" class="sb-sidenav-menu-nested nav accordion">
                                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#pagesCollapseAuth" aria-expanded="false" aria-controls="pagesCollapseAuth"><span>@localizer["Models"]</span><div class="sb-sidenav-collapse-arrow"><i class="fa fa-angle-down"></i></div></a>
                                        <div id="pagesCollapseAuth" class="collapse" aria-labelledby="headingOne" data-parent="#sidenavAccordionPages">
                                            <div class="sb-sidenav-menu-nested nav">
                                                <a class="nav-link" href="/Admin/Products">@localizer["Products"]</a>
                                                <a class="nav-link" href="/Admin/Categories">@localizer["Categories"]</a>
                                                <a class="nav-link" href="/Admin/Countries">@localizer["Countries"]</a>
                                                <a class="nav-link" href="/Admin/Marks">@localizer["Marks"]</a>
                                                <a class="nav-link" href="/Admin/Sales">@localizer["Sales"]</a>
                                                <a class="nav-link" href="/Admin/Ratings">@localizer["Ratings"]</a>
                                                <a class="nav-link" href="/Admin/Comments">@localizer["Comments"]</a>
                                                <a class="nav-link" href="/Admin/Orders">@localizer["Orders"]</a>
                                            </div>
                                        </div>
                                        <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#pagesCollapseAuth" aria-expanded="false" aria-controls="pagesCollapseAuth"><span>@localizer["SendMail"]</span><div class="sb-sidenav-collapse-arrow"><i class="fa fa-angle-down"></i></div></a>
                                        <div id="pagesCollapseAuth" class="collapse" aria-labelledby="headingOne" data-parent="#sidenavAccordionPages">
                                            <div class="sb-sidenav-menu-nested nav">
                                                <a class="nav-link" href="/Mail/SendMail">@localizer["Mail"]</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small"><span>@localizer["Logged"] : @User.Identity.Name</span></div>
                    </div>
                </div>
            </div>
            <div id="layoutSidenav_content">
                <main></main>
            </div>
        </div>
    </div>
    <div class="col-md-9">
        @RenderBody()
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
