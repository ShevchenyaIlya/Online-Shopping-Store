@model ProductStore.Models.Sale
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>@localizer["Delete"]</h1>

<h3 class="alert-danger">@localizer["Are you sure you want to delete this"]?</h3>
<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <div>
                    <h4 style="text-align: center">@localizer["Sale"]</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.SaleValue)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.SaleValue)
                        </dd>
                        <dt class="col-sm-4">
                            Product
                        </dt>
                        <dd class="col-sm-8">
                            <dl class="row">
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Product.ProductName)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Product.ProductName)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Product.ProductDescription)
                                </dt>
                                <dd class="col-sm-8">
                                    @Html.DisplayFor(model => model.Product.ProductDescription)
                                </dd>
                                <dt class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Product.ProductPicture)
                                </dt>
                                <dd class="col-sm-8">
                                    <img id="profilePicture" style="width:80px;height:60px; object-fit:cover" src="@Model.Product.ProductPicture">
                                </dd>
                            </dl>
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.AddedDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.AddedDate)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.FromDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.FromDate)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ToDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ToDate)
                        </dd>
                    </dl>

                    <form asp-action="Delete" style="background: transparent">
                        <input type="hidden" asp-for="SaleId" />
                        <input type="submit" value="@localizer["Delete"]" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Back to List"]</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>