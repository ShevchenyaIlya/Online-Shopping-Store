@model IEnumerable<ProductStore.Models.Sale>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary btn-sm">Create New</a>
</p>
@if (ViewBag.StatusMessage != null)
{
    <partial name="../Shared/_StatusMessage" model="ViewBag.StatusMessage" />
}
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SaleValue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SaleValue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SaleId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Edit</a>
                <a asp-action="Details" asp-route-id="@item.SaleId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Details</a>
                <a asp-action="Delete" asp-route-id="@item.SaleId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
