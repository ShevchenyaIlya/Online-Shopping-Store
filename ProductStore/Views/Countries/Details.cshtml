@model ProductStore.Models.Country
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@if (ViewBag.StatusMessage != null)
{
    <partial name="../Shared/_StatusMessage" model="ViewBag.StatusMessage" />
}
<h1>@localizer["Details"]</h1>
<div class="register-photo">
    <div class="form-container">
        <div class="form-horizontal">
            <div style="background-color: white">
                <h4>@localizer["Country"]</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CountryName)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CountryName)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CountryAbbreviation)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CountryAbbreviation)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CountryCode)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CountryCode)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CountryPicture)
                    </dt>
                    <dd class="col-sm-8">
                        <img id="profilePicture" style="width:200px;height:150px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.CountryPicture))">
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.CountryId" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Edit"]</a>
                <a asp-action="Index" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Back to List"]</a>
            </div>
        </div>
    </div>
</div>

