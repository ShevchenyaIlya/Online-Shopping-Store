@model IEnumerable<ProductStore.Areas.Identity.Data.ApplicationUser>
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


<div class="alert alert-info" style="width:100%">
    @localizer["Users"]
</div>
<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a asp-controller="Users" asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Details"]</a>
                    <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary btn-sm" role="button" aria-pressed="true">@localizer["Delete"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
